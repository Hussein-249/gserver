{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "types": ["node"],
        "lib": ["esnext", "dom"]
    },
    "include": ["src/*.ts"],
    "exclude": ["node_modules"]
}
